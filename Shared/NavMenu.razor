@inject Microsoft.Extensions.Localization.IStringLocalizer<App> Localizer
@inject TimerService TimerService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">DisciplineApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> @Localizer["Home"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="timer">
                <span class="oi oi-timer" aria-hidden="true"></span> @Localizer["Timer"]
                @if (TimerService.IsRunning)
                {
                    <span class="badge bg-danger ms-2">@TimeDisplay</span>
                }
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tasks">
                <span class="oi oi-list" aria-hidden="true"></span> @Localizer["Tasks"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="leaderboard">
                <span class="oi oi-graph" aria-hidden="true"></span> @Localizer["Leaderboard"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="history">
                <span class="oi oi-clock" aria-hidden="true"></span> @Localizer["History"]
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    protected override void OnInitialized()
    {
        TimerService.OnTick += UpdateUI;
    }

    private void UpdateUI()
    {
        InvokeAsync(StateHasChanged);
    }

    private string TimeDisplay => TimerService.IsPomodoroMode ? 
        $"{(int)TimerService.TimeLeft.TotalMinutes:D2}:{TimerService.TimeLeft.Seconds:D2}" : 
        $"{(int)TimerService.TimeElapsed.TotalMinutes:D2}:{TimerService.TimeElapsed.Seconds:D2}";

    public void Dispose()
    {
        TimerService.OnTick -= UpdateUI;
    }
}
