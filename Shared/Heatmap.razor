@using System.Globalization
@inject IGamificationService GamificationService
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="heatmap-container">
    <h4 class="mb-3">Activity Heatmap</h4>
    
    @if (isLoading)
    {
        <p>Loading activity...</p>
    }
    else
    {
        <div class="heatmap-wrapper">
            <!-- Day labels -->
            <div class="day-labels">
                <div class="day-label"></div>
                <div class="day-label">Mon</div>
                <div class="day-label"></div>
                <div class="day-label">Wed</div>
                <div class="day-label"></div>
                <div class="day-label">Fri</div>
                <div class="day-label"></div>
            </div>
            
            <!-- Month labels and grid -->
            <div class="heatmap-content">
                <!-- Month labels -->
                <div class="month-labels">
                    @{
                        var currentMonth = "";
                        for (int i = 0; i < 53; i++)
                        {
                            var weekStart = StartDate.AddDays(i * 7);
                            var monthName = weekStart.ToString("MMM");
                            
                            if (monthName != currentMonth && i % 4 == 0)
                            {
                                <div class="month-label">@monthName</div>
                                currentMonth = monthName;
                            }
                            else
                            {
                                <div class="month-label"></div>
                            }
                        }
                    }
                </div>
                
                <!-- Heatmap grid -->
                <div class="heatmap-grid">
                    @for (int i = 0; i < 53; i++)
                    {
                        <div class="heatmap-week">
                            @for (int j = 0; j < 7; j++)
                            {
                                var date = StartDate.AddDays(i * 7 + j);
                                if (date <= DateTime.Today)
                                {
                                    var count = ActivityData.ContainsKey(date) ? ActivityData[date] : 0;
                                    var level = GetLevel(count);
                                    <div class="heatmap-day level-@level" data-tooltip="@date.ToString("yyyy-MM-dd"): @count activities"></div>
                                }
                                else
                                {
                                    <div class="heatmap-day empty"></div>
                                }
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="heatmap-legend mt-3">
            <span class="text-muted small me-2">Less</span>
            <div class="heatmap-day level-0"></div>
            <div class="heatmap-day level-1"></div>
            <div class="heatmap-day level-2"></div>
            <div class="heatmap-day level-3"></div>
            <div class="heatmap-day level-4"></div>
            <span class="text-muted small ms-2">More</span>
        </div>
    }
</div>

